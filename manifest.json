{
  "manifest_version": 3,
  "name": "grouphub",
  "version": "1.0",
  "description": "Modify Github UI to allow grouping",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["https://github.com/*"],
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*",
        "https://github.com/orgs/*/repositories*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}